<h1>Admin Dashboard</h1>

<div class="dashboard-metrics">
  <div class="metric-box">
    <h2>Total Sales Today</h2>
    <p>$<%= @total_sales_today %></p>
  </div>

  <div class="metric-box">
    <h2>Total Sales This Week</h2>
    <p>$<%= @total_sales_week %></p>
  </div>

  <div class="metric-box">
    <h2>Total Bookings Today</h2>
    <p><%= @total_bookings_today %></p>
  </div>

  <div class="metric-box">
    <h2>Total Bookings This Week</h2>
    <p><%= @total_bookings_week %></p>
  </div>

  <div class="metric-box">
    <h2>Current Occupancy Rate</h2>
    <p><%= @occupancy_rate %> %</p>
  </div>
</div>

<h2>Recent Bookings</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>User</th>
      <th>Cabin</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @recent_bookings.each do |booking| %>
      <tr>
        <td><%= booking.user.email %></td>
        <td><%= booking.cabin.name %></td>
        <td><%= booking.start_date %></td>
        <td><%= booking.end_date %></td>
        <td>$<%= booking.total_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
